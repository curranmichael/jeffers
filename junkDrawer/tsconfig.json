{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "../dist/junkDrawer",
    "rootDir": "..",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}